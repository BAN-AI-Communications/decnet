#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=dnprogs

build:
	$(checkdir)
	
	make prefix=/usr RELEASE=true
	touch build

clean:
	$(checkdir)
	-rm -f build
	-make clean
	-rm -f `find . -name "*~"`
	-rm -rf debian/tmp `find debian/* -type d ! -name CVS ` debian/files* core
	-rm -f debian/*substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	-rm -rf debian/tmp `find debian/* -type d ! -name CVS `
	install -d debian/tmp
#	install -D -m 0644 include/netdnet/dn.h debian/tmp/usr/include/netdnet/dn.h
	#install -D -m 0644 include/netdnet/dnetdb.h debian/tmp/usr/include/netdnet/netdb.h
	install -D -m 0644 apps/decnet.conf debian/tmp/etc/decnet.conf
	make install DESTDIR=`pwd`/debian/tmp MAKEDEB=true RELEASE=true
	ln -sf libdnet.so.2 debian/tmp/usr/lib/libdnet.so.1
	debstd -p 
	dpkg-gencontrol -pdnprogs -isp
	chown -R root.root debian/tmp
	chmod -R go=rX debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
